<mujoco model="SASA">
    <compiler angle="degree" coordinate="local" inertiafromgeom="true"/>
    <option gravity="0 0 0" integrator="RK4" timestep="1e-4" />
    <worldbody>
        <body name="satellite" pos="0 0 0.0">
            <joint axis="1 0 0" damping="0.0" name="BASE_DOF" pos="0 0 0" type="free"/>
            <geom mass="2500.0" pos="0 0 0" rgba="0 0 1 1" size="2 2.3 3" type="box"/>
            <camera euler="0 0 0" fovy="60" name="rgb" pos="0 0 5.5"></camera>
            		
            
            <body name="panelL0" pos="-12.5 0 0.0">
                <joint axis="1 0 0" stiffness="1000" damping="1000.0" name="panelL0_rotate_x" pos="12.5 0 0" type="hinge" limited="true" range="-2 2"/>
                <joint axis="0 1 0" stiffness="1000" damping="1000.0" name="panelL0_rotate_y" pos="12.5 0 0" type="hinge" limited="true" range="-2 2"/>
                <joint axis="0 0 1" stiffness="1000" damping="1000.0" name="panelL0_rotate_z" pos="12.5 0 0" type="hinge" limited="true" range="-10 10"/>
                <geom mass="200.0" rgba="0 1 0 1" size="10 0.05 3" type="box"/>
            
            </body>
            <body name="panelR0" pos="12.5 0 0.0">
                <joint axis="1 0 0" stiffness="1000" damping="1000.0" name="panelR0_rotate_x" pos="-12.5 0 0" type="hinge" limited="true" range="-2 2"/>
                <joint axis="0 1 0" stiffness="1000" damping="1000.0" name="panelR0_rotate_y" pos="-12.5 0 0" type="hinge" limited="true" range="-2 2"/>
                <joint axis="0 0 1" stiffness="1000" damping="1000.0" name="panelR0_rotate_z" pos="-12.5 0 0" type="hinge" limited="true" range="-10 10"/>
                <geom mass="200.0" rgba="1 0 0 1" size="10 0.05 3" type="box"/>
            
            </body>
        </body>
    </worldbody>
    <actuator>
    
        <motor gear="1 0 0 0 0 0" joint="BASE_DOF"/>
        <motor gear="0 1 0 0 0 0" joint="BASE_DOF"/>
        <motor gear="0 0 1 0 0 0" joint="BASE_DOF"/>
        
        <motor gear="0 0 0 1 0 0" joint="BASE_DOF"/>
        <motor gear="0 0 0 0 1 0" joint="BASE_DOF"/>
        <motor gear="0 0 0 0 0 1" joint="BASE_DOF"/>
        
        <motor gear="10000" joint="panelL0_rotate_x"/>
        <motor gear="10000" joint="panelL0_rotate_y"/>
        <motor gear="10000" joint="panelL0_rotate_z"/>
        
        <motor gear="10000" joint="panelR0_rotate_x"/>
        <motor gear="10000" joint="panelR0_rotate_y"/>
        <motor gear="10000" joint="panelR0_rotate_z"/>
        
    </actuator>
</mujoco>