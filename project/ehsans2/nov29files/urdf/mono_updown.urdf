<robot name="updown_box">
        
     <link name="slideBar">
         <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <box size="0.05 0.05 30"/>
            </geometry>
            <material name="green">
            <color rgba="0 0.8 .8 1"/>
            </material>
        </visual>
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <mass value="0"/>
            <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
        </inertial>
    </link>
    
    <link name="base">
	    <visual>
          <origin xyz="0 0 0" rpy="0 0 0"/>
	      <geometry>
	        <box size="0.20 0.20 0.30"/>
	      </geometry>
	      <material name="blue">
	        <color rgba="0.3 0.3 0.3 1.0"/>
	      </material>
	    </visual>
        <collision>
          <geometry>
            <box size="0.20 0.20 0.30"/>
          </geometry>
          <origin xyz="0 0 0" rpy="0 0 0"/>
        </collision>
        <inertial>
          <mass value="1"/>
          <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
        </inertial>
    </link>
    
  
    <joint name="slider_to_base" type="prismatic">
        <axis xyz="0 0 1"/>
        <origin xyz="0.0 0.0 0"/>
        <parent link="slideBar"/>
        <child link="base"/>
        <limit effort="200" lower="-15" upper="15" velocity="5"/>
    </joint>
    
</robot>

