<robot name="pendulum">
        
     <link name="base">
         <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <box size="0.1 0.1 0.1"/>
            </geometry>
            <material name="green">
            <color rgba="0 0.8 .8 1"/>
            </material>
        </visual>
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <mass value="0"/>
            <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
        </inertial>
    </link>
    
    <link name="leg">
	    <visual>
          <origin xyz="0 0 -0.5" rpy="0 0 0"/>
	      <geometry>
	        <box size="0.05 0.05 0.9"/>
	      </geometry>
	      <material name="blue">
	        <color rgba="0.3 0.3 0.3 1.0"/>
	      </material>
	    </visual>
        <collision>
          <geometry>
            <box size="0.05 0.05 0.9"/>
          </geometry>
          <origin xyz="0 0 -0.5" rpy="0 0 0"/>
        </collision>
        <inertial>
          <mass value="1"/>
          <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
        </inertial>
    </link>
    
  
    <joint name="base_to_leg" type="revolute">
        <axis xyz="1 0 0"/>
        <origin xyz="0.0 0.0 0"/>
        <parent link="base"/>
        <child link="leg"/>
        <limit effort="200" velocity="5"/>
        <dynamics damping="0.0" friction="1.0"/>
    </joint>
    
</robot>

